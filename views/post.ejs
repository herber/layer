<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= name %></title>
        <link rel="stylesheet" href="../main.css">
        <style media="screen">
            hr:last-child {
              display: none;
            }
        </style>
    </head>
    <body>
        <div class="main">
            <h1><a href="/"><%= name %></a></h1>
            <div class="posts">
                <div class="post">
                    <h3><%= post.title %></h3>
                    <i>by <a href="~<%= post.userurl %>"><%= post.user %></a>. <%= post.date %></i>
                    <p><%- post.text %></p>
                </div>
                <hr>
            </div>
        </div>
    </body>
</html>
