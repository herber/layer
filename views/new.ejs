<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= name %></title>
        <link rel="stylesheet" href="../dashboard.css">
        <link rel="stylesheet" href="../editor.css">
        <style media="screen">
            hr:last-child {
              display: none;
            }
        </style>
    </head>
    <body>
        <div class="main">
            <div class="hide">
                <h1><a href="/"><%= name %></a></h1>
                <div class="nav">
                    <a style="width: 33.3%" href="/dashboard">Dashboard</a>
                    <a style="width: 33.3%" href="users">Users</a>
                    <a style="width: 33.3%" href="logout">Logout</a>
                </div>
            </div>
            <br><br>

            <form action="/dashboard/new/save/" method="post">
                <input class="input" type="text" name="title" placeholder="Title">
                <textarea name="text" id="editor" rows="8" cols="80" ></textarea>
                <button type="submit">Save</button>
            </form>
        </div>

        <!-- JQuery -->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

        <!-- Toastr for toasts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

        <!-- Markdown editor by NextStepWebs -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

        <script>
            var simplemde = new SimpleMDE({ element: document.getElementById("editor"), toolbar: false, status: false, placeholder: 'Your post\'s text'  });

            $(window).keypress(function (event) {
                if (!(event.which == 115 && event.ctrlKey) && !(event.which == 19)) return true;

                toastr.info('Just click save when you are done.')

                event.preventDefault();
                return false;
            });
        </script>
    </body>
</html>
