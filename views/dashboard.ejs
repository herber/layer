<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= name %></title>
        <link rel="stylesheet" href="../dashboard.css">
        <style media="screen">
            hr:last-child {
              display: none;
            }
        </style>
    </head>
    <body>
        <div class="main">
            <h1><a href="/"><%= name %></a></h1>
            <div class="nav">
                <a style="width: 33.3%" href="/dashboard/new">New</a>
                <a style="width: 33.3%" href="/dashboard/users">Users</a>
                <a style="width: 33.3%" href="/dashboard/logout">Logout</a>
            </div>
            <br><br>
            <div class="posts">
                <% for(var i = 0; i < posts.length; i++){ %>
                <div class="post">
                    <h3><a href="/dashboard/edit/<%= posts[i].url %>"><%= posts[i].title %></a></h3>
                    <i><%= posts[i].date %></i>
                    <p><% for(var x = 0; x < posts[i].text.length && x < 600; x++){ %><%- posts[i].text[x] %><% } %></p>
                </div>
                <hr>
                <% } %>
            </div>
        </div>
    </body>
</html>
